<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:gravity="center|top"

        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:src="@mipmap/imagen11"
            android:layout_marginTop="@dimen/_10sdp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="@dimen/_4sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="María Solorzano"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/correo"
            android:paddingLeft="@dimen/_20sdp"
            android:drawableLeft="@drawable/ic_sms"
            android:drawablePadding="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textColorHint="@color/color_lyrics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/border_default"
            android:fontFamily="sans-serif"
            android:hint="Correo"/>
        <EditText
            android:id="@+id/celular"
            android:paddingLeft="@dimen/_25sdp"
            android:drawableLeft="@drawable/ic_celular"
            android:drawablePadding="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textColorHint="@color/color_lyrics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/border_default"
            android:fontFamily="sans-serif"
            android:hint="Celular"/>

        <TextView
            android:id="@+id/key"
            android:paddingLeft="@dimen/_20sdp"
            android:drawableLeft="@drawable/ic_key"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:gravity="center|left"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/border_linea_rosado"
            android:fontFamily="sans-serif"
            android:text="Modificar Contraseña"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hijos"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14ssp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/imagen13"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="@dimen/_2sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Lucia Perez"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/imagen13"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="@dimen/_2sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Lorena Perez"/>

        </LinearLayout>

    </LinearLayout>






</ScrollView>