<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_linea_rosado"
                android:fontFamily="sans-serif"
                android:text="Omitir"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="right"
                android:textSize="@dimen/_10ssp"/>
            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"
                android:text="Complete la siguiente informaciÃ³n para brindarle un mejor servicio"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_default"
                android:hint="Alergias"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/lyrics"
                android:textSize="@dimen/_10ssp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_default"
                android:hint="Peso al nacer"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/lyrics"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_default"
                android:hint="Tipo de parto"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/lyrics"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_10ssp"
                    android:text="Asfixia"/>

                <Button
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Si"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/lyrics"
                    android:background="@drawable/border_boton_sexo"/>
                <Button
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="No"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@drawable/border_boton_sexo"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_10ssp"
                    android:text="Lactancia exclusiva"/>

                <Button
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Si"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/lyrics"
                    android:background="@drawable/border_boton_sexo"/>
                <Button
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="No"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@drawable/border_boton_sexo"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_default"
                android:hint="Enfermedades"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/lyrics"
                android:textSize="@dimen/_10ssp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_default"
                android:hint="Operaciones"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/lyrics"
                android:textSize="@dimen/_10ssp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_default"
                android:hint="Hospitalizaciones"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/lyrics"
                android:textSize="@dimen/_10ssp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_default"
                android:hint="Enfermedades familiares"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/lyrics"
                android:textSize="@dimen/_10ssp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_default"
                android:backgroundTint="@color/colorAccent"
                android:text="Guardar"
                android:layout_marginBottom="@dimen/_10ssp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"/>

        </LinearLayout>



</ScrollView>

