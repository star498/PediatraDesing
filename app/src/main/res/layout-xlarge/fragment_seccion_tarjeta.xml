<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".crearcuenta.seccionDos.SeccionTarjeta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/color_gradiente"
                        android:gravity="center"
                        android:padding="30dp"
                        android:text="@string/tab_text_2"
                        android:textColor="@color/white"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:paddingTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Te regalamos la primera sesión de 10 minutos"
                        android:textSize="30dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/border_default"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/numero"
                            android:textSize="30dp"
                            android:theme="@style/Widget.AppCompat.EditText"
                            android:textColorHint="@color/lyrics"
                            android:layout_weight="11"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:gravity="center|left"
                            android:paddingLeft="10dp"
                            android:fontFamily="sans-serif"
                            android:maxLength="11"
                            android:hint="Número de Tarjeta"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_visa"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/vencimiento"
                            android:padding="20dp"
                            android:layout_weight="6"
                            android:textSize="30dp"
                            android:textColorHint="@color/lyrics"
                            android:layout_width="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="80dp"
                            android:background="@drawable/border_default"
                            android:fontFamily="sans-serif"
                            android:hint="Vencimiento"/>
                        <EditText
                            android:id="@+id/vencimiento2"
                            android:padding="20dp"
                            android:textSize="30dp"
                            android:textColorHint="@color/lyrics"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:background="@drawable/border_default"
                            android:fontFamily="sans-serif"
                            android:layout_weight="6"
                            android:hint="Vencimiento"/>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/nombre"
                        android:padding="20dp"
                        android:textSize="30dp"
                        android:textColorHint="@color/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border_default"
                        android:fontFamily="sans-serif"
                        android:hint="Nombre"/>

                    <EditText
                        android:id="@+id/apellido"
                        android:padding="20dp"
                        android:textSize="30dp"
                        android:textColorHint="@color/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border_default"
                        android:fontFamily="sans-serif"
                        android:hint="Apellido"/>

                    <EditText
                        android:id="@+id/correo"
                        android:padding="20dp"
                        android:textSize="30dp"
                        android:textColorHint="@color/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/border_default"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="20dp"
                        android:hint="Correo"/>




                </LinearLayout>
            </LinearLayout>



</RelativeLayout>


</FrameLayout>