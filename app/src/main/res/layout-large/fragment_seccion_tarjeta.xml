<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".crearcuenta.seccionDos.SeccionTarjeta">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/color_gradiente"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="@string/tab_text_2"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:paddingTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Te regalamos la primera sesión de 10 minutos"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:id="@+id/numero"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:drawableRight="@drawable/ic_visa"
                        android:textSize="18dp"
                        android:textColorHint="@color/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/border_default"
                        android:fontFamily="sans-serif"
                        android:maxLength="11"
                        android:layout_marginTop="20dp"
                        android:hint="Número de Tarjeta"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/vencimiento"
                            android:layout_weight="6"
                            android:textSize="18dp"
                            android:textColorHint="@color/lyrics"
                            android:layout_width="0dp"
                            android:paddingLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="60dp"
                            android:background="@drawable/border_default"
                            android:fontFamily="sans-serif"
                            android:hint="Vencimiento"/>
                        <EditText
                            android:id="@+id/vencimiento2"
                            android:textSize="18dp"
                            android:textColorHint="@color/lyrics"
                            android:layout_width="0dp"
                            android:paddingLeft="20dp"
                            android:layout_height="60dp"
                            android:background="@drawable/border_default"
                            android:fontFamily="sans-serif"
                            android:layout_weight="6"
                            android:hint="Vencimiento"/>

                    </LinearLayout>
                    <EditText
                        android:id="@+id/nombre"
                        android:textSize="18dp"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_default"
                        android:fontFamily="sans-serif"
                        android:hint="Nombre"/>

                    <EditText
                        android:id="@+id/apellido"
                        android:textSize="18dp"
                        android:paddingLeft="20dp"
                        android:textColorHint="@color/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_default"
                        android:fontFamily="sans-serif"
                        android:hint="Apellido"/>

                    <EditText
                        android:id="@+id/correo"
                        android:textSize="18dp"
                        android:textColorHint="@color/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_default"
                        android:fontFamily="sans-serif"
                        android:layout_marginBottom="10dp"
                        android:hint="Correo"/>




                </LinearLayout>
            </LinearLayout>



</RelativeLayout>


</FrameLayout>